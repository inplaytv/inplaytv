{
  "name": "fantasy-golf-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --filter=web --filter=golf --filter=admin --parallel",
    "dev:web": "turbo run dev --filter=web",
    "dev:golf": "turbo run dev --filter=golf",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:golf\" \"pnpm dev:admin\"",
    "kill:ports": "pwsh -Command \"Get-Process | Where-Object { $_.ProcessName -like '*node*' } | Stop-Process -Force\"",
    "restart:web": "pnpm kill:ports; pnpm dev:web",
    "restart:golf": "pnpm kill:ports; pnpm dev:golf",
    "restart:admin": "pnpm kill:ports; pnpm dev:admin",
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=admin",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "dotenv": "^17.2.3"
  }
}
